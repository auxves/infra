{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "docker:pinDigests"
  ],

  "timezone": "America/Los_Angeles",

  "automergeType": "pr",
  "automergeSchedule": ["after 2am and before 7am"],
  "platformAutomerge": false,

  "pin": {
    "automerge": true
  },
  "pinDigest": {
    "automerge": true
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "groupName": "immich",
      "matchPackageNames": ["ghcr.io/immich-app/{/,}**"]
    },
    {
      "matchPackageNames": [
        "redis",
        "postgres",
        "tensorchord/pgvecto-rs",
        "itzg/minecraft-server",
        "sfudeus/apcupsd_exporter",
        "gregewing/apcupsd"
      ],
      "enabled": false
    }
  ],

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:weekly"]
  },

  "nix": {
    "enabled": true,
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "enabled": false
      }
    ]
  },

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".nix$"],
      "datasourceTemplate": "docker",
      "matchStringsStrategy": "any",
      "matchStrings": [
        "image = \"(?<depName>.*?)(:(?<currentValue>.*?))?(@(?<currentDigest>sha256:[a-f0-9]+))?\""
      ],
      "currentValueTemplate": "{{#if currentValue}}{{currentValue}}{{else}}latest{{/if}}",
      "autoReplaceStringTemplate": "image = \"{{depName}}:{{newValue}}{{#if newDigest}}@{{{newDigest}}}{{/if}}\""
    }
  ]
}
