{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "docker:pinDigests"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".nix$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "image\\s*=\\s*\"?(?<depName>.*?):(?<currentValue>.*?)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\";",
        "image = {\n.*repository = \"(?<depName>.*)\";\n.*tag = \"(?<currentValue>.*)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\";",
        "image = {\n.*repo = \"(?<depName>.*)\";\n.*tag = \"(?<currentValue>.*)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\";"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:weekly"]
  },
  "nix": {
    "enabled": true
  }
}
