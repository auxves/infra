{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "docker:enableMajor"],
  "major": {
    "dependencyDashboardApproval": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".nix$"],
      "datasourceTemplate": "docker",
      "matchStrings": ["image = \"(?<depName>.+?):(?<currentValue>.+?)\";"]
    }
  ]
}
