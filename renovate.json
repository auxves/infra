{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "docker:pinDigests"
  ],

  "timezone": "America/Los_Angeles",
  "schedule": ["after 2am and before 7am"],
  "prHourlyLimit": 5,

  "automergeType": "pr",
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",

  "pin": {
    "automerge": true
  },

  "pinDigest": {
    "automerge": true
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^v?0/",
      "automerge": true
    },
    {
      "groupName": "immich",
      "matchPackageNames": ["ghcr.io/immich-app/{/,}**"]
    },
    {
      "matchPackageNames": [
        "redis",
        "postgres",
        "pgvector/pgvector",
        "ghcr.io/immich-app/postgres",
        "itzg/minecraft-server",
        "sfudeus/apcupsd_exporter",
        "gregewing/apcupsd",
        "ghcr.io/tailscale/tailscale"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": ["rclone/rclone"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["digest"],
      "matchPackageNames": ["quay.io/podman/stable"],
      "enabled": false
    }
  ],

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "rebaseWhen": "auto",
    "schedule": ["* 2-4 * * 1"]
  },

  "nix": {
    "enabled": true,
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "enabled": false
      }
    ]
  },

  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/.nix$/"],
      "datasourceTemplate": "docker",
      "matchStringsStrategy": "any",
      "matchStrings": [
        "image = \"(?<depName>.*?)(:(?<currentValue>.*?))?(@(?<currentDigest>sha256:[a-f0-9]+))?\""
      ],
      "currentValueTemplate": "{{#if currentValue}}{{currentValue}}{{else}}latest{{/if}}",
      "autoReplaceStringTemplate": "image = \"{{depName}}:{{newValue}}{{#if newDigest}}@{{{newDigest}}}{{/if}}\""
    }
  ]
}
